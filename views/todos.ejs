<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Todo List</title>
  <style>
    body {
      background-color: #121212;
      color: #ffffff;
      font-family: 'Segoe UI', sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 30px;
      margin: 0;
    }

    h1 {
      margin-bottom: 20px;
      font-size: 2.5rem;
    }

    form {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }

    input[type="text"], input[type="date"] {
      padding: 10px;
      border-radius: 8px;
      border: none;
      outline: none;
      width: 250px;
      background-color: #1e1e1e;
      color: #fff;
    }

    input[type="date"]::-webkit-calendar-picker-indicator {
      filter: invert(1); /* make calendar icon white */
    }

    button {
      padding: 10px 20px;
      border-radius: 8px;
      border: none;
      background-color: #4e9af1;
      color: white;
      font-weight: bold;
      cursor: pointer;
    }

    button:hover {
      background-color: #2a88ff;
    }

    .tabs {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }

    .tabs button {
      background-color: #333;
    }

    .tabs button.active {
      background-color: #007bff;
    }

    ul {
      list-style-type: none;
      padding: 0;
      width: 100%;
      max-width: 600px;
    }

    li {
      background-color: #1e1e1e;
      padding: 15px;
      margin-bottom: 10px;
      border-radius: 10px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .completed {
      text-decoration: line-through;
      color: #888;
    }

    .actions form {
      display: inline;
    }

    .actions button {
      margin-left: 5px;
      background-color: #333;
      color: #fff;
    }

    .actions button.edit {
      background-color: #f39c12;
    }

    .actions button.complete {
      background-color: #2ecc71;
    }

    .actions button.undo {
      background-color: #9b59b6;
    }

    .actions button.delete {
      background-color: #e74c3c;
    }

    footer {
      margin-top: 40px;
      text-align: center;
      color: #888;
      font-size: 0.9em;
    }

    .exit-button {
      display: inline-block;
      margin-top: 10px;
      background-color: #c0392b;
      color: white;
      padding: 10px 20px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: bold;
      transition: background 0.3s;
    }

    .exit-button:hover {
      background-color: #e74c3c;
    }
  </style>
  <script>
    function confirmDelete(id) {
      if (confirm("Are you sure you want to delete this task?")) {
        document.getElementById('delete-form-' + id).submit();
      }
    }

    function switchTab(tab) {
      document.getElementById('all-tasks').style.display = tab === 'all' ? 'block' : 'none';
      document.getElementById('due-tasks').style.display = tab === 'due' ? 'block' : 'none';
      document.getElementById('tab-all').classList.toggle('active', tab === 'all');
      document.getElementById('tab-due').classList.toggle('active', tab === 'due');
    }
  </script>
</head>
<body>
  <h1>My Todo List</h1>

  <form action="/todos" method="POST">
    <input type="text" name="title" placeholder="Add a new task" required>
    <input type="date" name="dueDate">
    <button type="submit">Add</button>
  </form>

  <div class="tabs">
    <button id="tab-all" class="active" onclick="switchTab('all')">All Tasks</button>
    <button id="tab-due" onclick="switchTab('due')">Due Date Tasks</button>
  </div>

  <!-- All Tasks Tab -->
  <ul id="all-tasks">
    <% todos.forEach(todo => { %>
      <li>
        <div>
          <span class="<%= todo.completed ? 'completed' : '' %>">
            <strong><%= todo.title %></strong>
          </span>
          <% if (todo.dueDate) { %>
            <div>
              <small>Due: <%= new Date(todo.dueDate).toLocaleDateString('en-GB') %></small>
            </div>
          <% } %>
        </div>
        <div class="actions">
          <% if (!todo.completed) { %>
            <form action="/todos/<%= todo._id %>/complete" method="POST">
              <button class="complete">‚úì</button>
            </form>
          <% } else { %>
            <form action="/todos/<%= todo._id %>/undo" method="POST">
              <button class="undo">‚Ü∫</button>
            </form>
          <% } %>
          <form action="/todos/<%= todo._id %>/edit" method="GET">
            <button class="edit">‚úé</button>
          </form>
          <form id="delete-form-<%= todo._id %>" action="/todos/<%= todo._id %>?_method=DELETE" method="POST">
            <button type="button" class="delete" onclick="confirmDelete('<%= todo._id %>')">üóë</button>
          </form>
        </div>
      </li>
    <% }); %>
  </ul>

  <!-- Due Date Tasks Tab -->
  <ul id="due-tasks" style="display: none;">
    <% todos.filter(todo => todo.dueDate).forEach(todo => { %>
      <li>
        <div>
          <span class="<%= todo.completed ? 'completed' : '' %>">
            <strong><%= todo.title %></strong>
          </span>
          <div>
            <small>Due: <%= new Date(todo.dueDate).toLocaleDateString('en-GB') %></small>
          </div>
        </div>
        <div class="actions">
          <% if (!todo.completed) { %>
            <form action="/todos/<%= todo._id %>/complete" method="POST">
              <button class="complete">‚úì</button>
            </form>
          <% } else { %>
            <form action="/todos/<%= todo._id %>/undo" method="POST">
              <button class="undo">‚Ü∫</button>
            </form>
          <% } %>
          <form action="/todos/<%= todo._id %>/edit" method="GET">
            <button class="edit">‚úé</button>
          </form>
          <form id="delete-form-<%= todo._id %>" action="/todos/<%= todo._id %>?_method=DELETE" method="POST">
            <button type="button" class="delete" onclick="confirmDelete('<%= todo._id %>')">üóë</button>
          </form>
        </div>
      </li>
    <% }); %>
  </ul>

  <footer>
    <p>Created by Rishabh Roy</p>
    <a href="/exit" class="exit-button">‚ùå Exit</a>
  </footer>
</body>
</html>










